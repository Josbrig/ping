# Doxygen configuration for pingstats

PROJECT_NAME           = "pingstats"
PROJECT_BRIEF          = "Cross-platform ping statistics tool"
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs/doxygen
CREATE_SUBDIRS         = YES

INPUT                  = @CMAKE_CURRENT_SOURCE_DIR@/include \
                         @CMAKE_CURRENT_SOURCE_DIR@/src \
                         @CMAKE_CURRENT_SOURCE_DIR@/README.md
FILE_PATTERNS          = *.hpp *.cpp *.md
RECURSIVE              = YES

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_MAN           = NO

QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_LOGFILE           = @CMAKE_CURRENT_BINARY_DIR@/docs/doxygen/doxygen-warnings.log

HTML_OUTPUT            = html
HTML_TIMESTAMP         = NO

STRIP_FROM_PATH        = @CMAKE_CURRENT_SOURCE_DIR@
